
<div class="show_container">


  <div class="show_card deets">
    <div class="show_details">
      <div style="align-items: center; justify-content: center">
          <% if policy(@pet).edit? %>
            <%= link_to "Update", edit_pet_path(@pet),style:"margin: 30px", class: "btn btn-primary"  %>
          <% end %>


          <% if policy(@pet).destroy? %>
            <%= link_to "Remove Animal", pet_path, :method => 'delete', class: "btn btn-primary m-3" %>
          <% end %>

      </div>

      <div class="show_photos">


      </div>

      <div class="main_deets">
        <div class="deets">
          <div style= "padding: 50px">
          <h3><%= @pet.name.capitalize %></h3>
          <% if @pet.photos.attached? %>
            <%= cl_image_tag @pet.photos.first.key, height: 300, width: 400, crop: :fill %>
          <% end %>

          <h6> <strong> <%= @pet.name.capitalize %>'s Location:</strong><%= @pet.location %></h6>
          </div>
      <script>

      </script>
<!-- BOOKING FORM!! -->
      <div style= "padding: 50px">

        <% if current_user %>



        <div class="main-div-booking details_card">
          <h2 class="heading">Book Me!</h2>
          <div class="date-input">
            <div class="arrival">
              <h3><i class="fa fa-calendar"></i>&nbsp;&nbsp;Starting Date</h3>
              <input type="date" id="arrive" class="floatLabel" name="arrive">
            </div>
            <div class="departure">
              <h3><i class="fa fa-calendar"></i>&nbsp;&nbsp;Ending Date</h3>
              <input type="date" id="depart" class="floatLabel" name="depart"/>

            </div>
          </div>
          <div class="comments">
            <div class="controls">
            <h4 for="comments">Message</h4>
            <textarea name="comments" class="floatLabel" id="comments"></textarea>
          </div>
          <div class="submit-button">
            <button type="submit" value="Submit" class="col-1-4 btn btn-primary" formaction="new_booking_path">Submit</button>
          </div>
        </div>

        <%= simple_form_for @booking do |f| %>
        <%= f.input :name, label: 'Your pet name please', error: 'Name is mandatory, please specify one' %>
        <%= f.input :age %>
        <%= f.input :species, :collection => %w[Dog Cat Teaching-Assistant Ape Reptile],class: 'select2' %>
        <%= f.input :personality %>
        <%= f.input :location , id:"location" %>

        <%= f.input :gender, :collection => %w[Male Female] ,class: 'select2' %>
        <%= f.input :temperament, :collection => %w[Calm Nervous Quiet Active], class: 'select2' %>
        <%= f.input :child_friendly , :collection => %w[true false]  %>
        <%= f.input :guidelines %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <br>
        <%= f.button :submit, class: "add-pet-btn" %>
      <% end %>


        <% else  %>
          <p> You Must Login To Make a Booking</p>

        <% end %>


      </div>
        </div>
      </div>




      <div class="list-inline details_card">
        <ul>
          <li><strong>Age:</strong> <%= @pet.age%></li>
          <br>
          <li><strong>Gender:</strong><%= @pet.gender %></li>
          <br>
          <li><strong>Child Friendly: </strong><%= @pet.child_friendly==true ? "yes" : "no" %></li>
          <br>
          <li><strong>Personality: </strong><%= @pet.personality %></li>
          <br>
          <li><strong>Location: </strong><%= @pet.location %></li>
          <br>
          <li><strong>Temperament: </strong><%= @pet.temperament %></li>
          <br>

        </ul>
    </div>
          <div >
            <strong>Guidelines:</strong>
            <p class="guidelines">
              <%= @pet.guidelines %>

            </p>
          </div>
          <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
  </div>



