<h1><%= @pet.name %></h1>


<p>
  <%=  @pet.species%>
  <br>
  <%= @pet.gender %>
  <br>
  <%= @pet.location %>
  <br>
  <%= @pet.temperament %>
  <br>
  <%= @pet.guidelines %>
  <br>
  <%= @pet.age %>
  <br>
  <% @pet.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>

</p>

<% if @pet.user_id == current_user %>
  <%= link_to "edit", edit_pet_path(current_user)  %>
  <br>

  <%= link_to "Remove Animal", pet_path, :method => 'delete' %>
<% end %>
