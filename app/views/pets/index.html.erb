<div class= "index_container">
    <div>
      <%= link_to "Add a pet", new_user_pet_path(current_user), class: "btn btn-primary" %>
    </div>


    <% if @user %>
        <% if @user == current_user %>
          <div>
            <h1>Your pets</h1>
          </div>
        <% else %>
          <div>
            <h1><%= @user.first_name %>'s pets</h1>
          </div>
        <% end %>
    <% else %>
      <div>
        <h1>All pets Available:</h1>
      </div>
    <% end %>


    <div class="cards">
      <% @pets.each do |pet| %>
          <% pet.photos.each do |photo| %>
        <%img = cl_image_path photo.key%>
        <div class="list card" style="background-image: url(<%= img %>)">
          <% end %>
          <h1><%= pet.name %></h1>
            <%= link_to "See more", pet_path(pet) %>
        </div>
      <% end %>
    </div>
</div>

