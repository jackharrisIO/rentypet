<div class= "index_container">




    <% if @user %>
        <% if @user == current_user %>
          <% if current_user.pets.pluck(:name).empty? %>
            <div>
              <h1> You havent listed any pet yet!</h1>
            </div>
          <% else %>
            <div>
              <h1>Your pets</h1>
              <div class="cards">
                <% current_user.pets.each do |pet| %>
                  <% if pet.photos.any? %>
                    <% img = cl_image_path(pet.photos.first.key, width: 500, height: 300, crop: :thumb, gravity: :face) %>
                  <% else %>
                    <% imge = "URL HERE" %>
                  <% end %>
                  <div class="list card" style="background-image: url(<%= img  %>)">
                    <h1><%= pet.name %></h1>
                    <%= link_to "See more", pet_path(pet) %>
                  </div>
                <% end %>
              </div>
            </div>
            <% end %>
        <% else %>
          <div>
            <h1><%= @user.first_name %>'s pets</h1>
            <div class="cards">
                  <% User.find(params[:user_id]).pets.each do |pet| %>
                    <% if pet.photos.any? %>
                      <% img = cl_image_path(pet.photos.first.key, width: 500, height: 300, crop: :thumb, gravity: :face) %>
                    <% else %>
                      <% imge = "URL HERE" %>
                    <% end %>
                    <div class="list card" style="background-image: url(<%= img  %>)">
                      <h1><%= pet.name %></h1>
                      <%= link_to "See more", pet_path(pet) %>
                    </div>
                  <% end %>
            </div>
          </div>
        <% end %>
    <% else %>
      <div>
        <h1>All pets Available:</h1>
        <div class="cards">
                <% @pets.each do |pet| %>
                  <% if pet.photos.any? %>
                    <% img = cl_image_path(pet.photos.first.key, width: 500, height: 300, crop: :thumb, gravity: :face) %>
                  <% else %>
                    <% img = "https://images.unsplash.com/photo-1504208434309-cb69f4fe52b0?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" %>
                  <% end %>
                  <div class="list card" style="background-image: url(<%= img  %>)">


                    <h1><%= pet.name %></h1>
                    <%= link_to "See more", pet_path(pet) %>
                  </div>
                <% end %>
              </div>
      </div>
    <% end %>

