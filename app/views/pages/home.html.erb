<div class="home_banner d-flex flex-column" style="background-image: url(<%= asset_url('homepage.jpg') %>)">
  <br>
  <br>
  <br>
  <div class="search_card d-flex flex-column">
    <div class= "dynamic-text">
      <h1><span id="banner-typed-text"></span></h1>
    </div>
    <!-- <form class="form-style"> -->
      <div >

        <%= form_tag pets_path, method: :get, id: "form-id" do %>
        <%= text_field_tag :query,
        params[:query],
        class: "form-control form-item form-home", id: "input-home",
          placeholder: "Search by category"
          %>
          <%= submit_tag "Search", class: "login-button form-item" %>
          <% end %>
      </div>


      </div>
    </div>
    <div>
      <!-- <h2> All the Pets Available:</h2> -->

      <br>
      <br>
      <div class="container">
                   <div class="row">


                     <% @pets.each do |pet| %>
                      <% if pet.available %>
                        <div class="card-image">
                        <%= link_to pet_path(pet) do %>
                        <% img = cl_image_path(pet.photos.first.key, width: 350, height: 300, crop: :thumb, gravity: :face) %>
                          <div class="list card-my" style="background-image: linear-gradient(to bottom, rgba(0,0,0,0.35), rgba(0,0,0,0)), url(<%= img  %>)">
                            <h2><%= pet.name.capitalize %></h2>
                          </div>
                        <% end %>



                     <% end %>
                     <% end %>
                   </div>

                </div>
        <!--  -->

            </div>


